class Solution {
    static int singleElement(int[] arr , int N) {
        // code here
        Set<Integer> uniqueElements = new HashSet<>();
        for(int i : arr){
            uniqueElements.add(i);
        }
        int setSum=0;
        for(int i:uniqueElements){
            setSum+=i;
        }
        int arraySum=0;
        for(int i:arr){
            arraySum+=i;
        }
        return(3*setSum-arraySum)/2;
    }
}
